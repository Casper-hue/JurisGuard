# API配置示例

# CourtListener API (for court cases)
# Get your key from: https://www.courtlistener.com/api/
COURTLISTENER_API_KEY=your_courtlistener_api_key_here

# Regulations.gov API (for federal regulations)
# Get your key from: https://regulationsgov.github.io/developers/
REGULATIONS_API_KEY=your_regulations_api_key_here

# 主要AI服务配置（推荐使用OpenRouter）
# OpenRouter配置
USE_OPENROUTER=true
OPENROUTER_API_KEY=your_openrouter_api_key_here

# 备用AI服务配置
# Hugging Face Inference API配置
# USE_HUGGINGFACE=true
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here
# HUGGINGFACE_MODEL_ID=microsoft/DialoGPT-medium

# Together AI配置
# USE_TOGETHER=true
# TOGETHER_API_KEY=your_together_api_key_here

# 传统AI服务配置（备用）
# NEXT_PUBLIC_AI_API_KEY=your_ai_api_key_here
# NEXT_PUBLIC_AI_BASE_URL=https://api.deepseek.com/v1
# NEXT_PUBLIC_AI_MODEL=deepseek-chat

# 高级AI配置
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# 请求频率控制（毫秒）
AI_REQUEST_INTERVAL=5000
MAX_DAILY_REQUESTS=150

# Crawler API Endpoint (when running a separate crawler service)
NEXT_PUBLIC_CRAWLER_API_URL=http://localhost:8000/api